        <p id='msg_result'>Los rectangulos no colixionan</p>
        <p id='coordinates'></p>
        <p id='coordinates_result'></p>

    </div>
    <div class="left">
        <!--Creo la cuadrícula-->
        <div class="grid">
            {% for y in range(1, 11) %}
            <div class="fila">
                {% for x in range(10, 1) %}
                <div class="cell" id="c{{ y }}-{{ x }}"  >{{y}}-{{x}}</div>
                {% endfor %}
            </div>
            {% endfor %}
        </div>
    </div>
    <div class="div-return">
      <button class="boton3" id="back" onclick="window.location.href = '{{ path('index') }}';">Volver</button>
    </div>
    <script>
        // Asigno las variables de Twig a variables JavaScript
        var shock = '{{ shock }}';
